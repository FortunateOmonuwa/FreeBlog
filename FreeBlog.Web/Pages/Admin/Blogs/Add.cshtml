@page
@model FreeBlog.Web.Pages.Admin.Blogs.AddModel
@{
}

<div class ="bg-secondary bg-opacity-10 mb-4 pt-2">
    <div class="container">
        <h1>Add New Post</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="AddBlogPost.Heading">
            </div>
            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="AddBlogPost.PageTitle">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="AddBlogPost.Content"></textarea>
            </div>
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="AddBlogPost.Description">
            </div> 
            <div class="mb-3">
                <label for="imageUrl" class="form-label">Image Url</label>
                <input type="text" class="form-control" id="imageUrl" asp-for="AddBlogPost.ImageUrl">
            </div> 
            <div class="mb-3">
                <label for=" urlHandle" class="form-label"> Url Handle</label>
                <input type="text" class="form-control" id=" urlHandle" asp-for="AddBlogPost.UrlHandle">
            </div>  
            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published Date</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="AddBlogPost.PublishedDate">
            </div>  
            <div class="mb-3">  
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="AddBlogPost.Author">
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="isVisible">
                <label class="form-check-label" for="isVisible" asp-for="AddBlogPost.Visible">
                    Visible
                </label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" typeof="submit">Post</button>
            </div>
        </form>
    </div>
</div>
 