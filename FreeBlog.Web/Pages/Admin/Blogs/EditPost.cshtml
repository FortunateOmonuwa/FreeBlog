@page "{id:Guid}"
@model FreeBlog.Web.Pages.Admin.Blogs.EditPostModel
@{
}

<div class="bg-secondary bg-opacity-10 mb-4 pt-2">
    <div class="container">
        <h1>Edit Post</h1>
    </div>
</div>

@if(Model.Post != null)
{
    <div>
        <div class="container">
            <form method="post">
                <div class="mb-3">
                    <label for="heading" class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" asp-for="Post.Id" readonly>
                </div>
                <div class="mb-3">
                    <label for="heading" class="form-label">Heading</label>
                    <input type="text" class="form-control" id="heading" asp-for="Post.Heading">
                </div>
                <div class="mb-3">
                    <label for="pageTitle" class="form-label">Page Title</label>
                    <input type="text" class="form-control" id="pageTitle" asp-for="Post.PageTitle">
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" asp-for="Post.Content"></textarea>
                </div>
                <div class="mb-3">
                    <label for="shortDescription" class="form-label">Description</label>
                    <input type="text" class="form-control" id="shortDescription" asp-for="Post.Description">
                </div>
                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Image Url</label>
                    <input type="text" class="form-control" id="imageUrl" asp-for="Post.ImageUrl">
                </div>
                <div class="mb-3">
                    <label for=" urlHandle" class="form-label"> Url Handle</label>
                    <input type="text" class="form-control" id=" urlHandle" asp-for="Post.UrlHandle">
                </div>
                <div class="mb-3">
                    <label for="publishedDate" class="form-label">Published Date</label>
                    <input type="date" class="form-control" id="publishedDate" asp-for="Post.PublishedDate">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" asp-for="Post.Author">
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="isVisible">
                    <label class="form-check-label" for="isVisible" asp-for="Post.Visible">
                        Visible
                    </label>
                </div>
                <div class="mb-3 d-flex">
                    <button class="btn btn-primary" typeof="submit" asp-page-handler="Edit">Post</button>
                </div>
                <div class="mb-3">
                    <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
                </div>
            </form>
        </div>
    </div>

}
else
{
    <div class="container font-monospace">
        <h1>An error occured. Please try again or check again to see if the blog posts exists.</h1>
    </div>
}
