@page
@model FreeBlog.Web.Pages.Admin.Blogs.GetAllPostsModel
@{
}
<div class="bg-secondary bg-opacity-10 mb-4 pt-2">
    <div class="container">
        <h1>Posts</h1>
    </div>
</div>
@if(Model.Posts != null && Model.Posts.Any())
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td class="font-monospace text-uppercase">Id</td>
                    <td class="font-monospace text-uppercase">Heading</td>
                    <td class="font-monospace text-uppercase">Description</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Heading</td>
                        <td>@post.Description</td>
                        <td><a href="/Admin/Blogs/EditPost/@post.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container font-monospace">
        <h2>There are no Posts</h2>
    </div>
}
